<% include ../includes/header.ejs %>
   <div style="padding: 2%;">
    <form action="" method="post" enctype="multipart/form-data">
        <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
        <table class="table table-bordered">
            <tr>
                <th>제목</th>
                <td><input type="text" name="name" class="form-control"  value="<%=product.name%>"/></td>
            </tr>
            <tr>
                <th>섬네일</th>
                <td>
                    <input type="file" name="thumbnail" />
                    <% if(product.thumbnail){ %>
                    <a href="/uploads/<%=product.thumbnail%>" target="_blank">업로드 이미지 보기</a>
                    <% } %>
                </td>
            </tr>
            <tr>
                <th>대출가능 금액</th>
                <td><input type="number" name="price" class="form-control" value="<%=product.price%>"/></td>
            </tr>
            <tr>
                <th>이자율</th>
                <td><input type="number" placeholder="10만원 이상 이자율은 2.5%로 고정입니다." name="interestrate" class="form-control" value="<%=product.interestrate%>" step="0.1"/></td>
            </tr>
            <tr>
                <th>내용</th>
                <td><input type="text" name="content" class="form-control" value="<%=product.content%>"/></td>
            </tr>
            <tr>
                <th>상환 기한</th>
                <td><input type="date" name="description" class="form-control" value="<%=product.date%>"/></td>
            </tr>
        </table>
        <button class="btn btn-primary">작성하기</button>
    </form>
</div>
<% include ../includes/footer.ejs %>