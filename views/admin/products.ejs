<% include ../includes/header.ejs %>
   <div style="padding: 2%;">
    <table class="table table-bordered table-hover">
        <tr>
            <th>등급</th>
            <th>제목</th>
            <th>대출 가능 금액</th>
            <th>이자율</th>
            <th>상환기간</th>
            <th>작성자</th>
        </tr>
        <%products.forEach(function(product){%>
        <tr>
            <td>
                <a class="btn-info btn-sm"><%=product.credit%></a>
            </td>
            <td>
                <a href="/admin/products/detail/<%=product.id%>"><%=product.name%></a>
            </td>
            <td>
                <%=product.price%>
            </td>
            <td>
                <%=product.interestrate%> %
            </td>
            <td>
                <%=product.repaymentDate%> 일
            </td>
            <td>
                <%=product.username%>
            </td>
        </tr>
        <% }); %>
    </table>
    <div align="right">
    <% if(isLogin){%>
    <a href="/admin/products/write" class="btn btn-default">작성하기</a>
	<%}else{%>
	<a onclick="popup()" class="btn btn-default">작성하기</a>
	<%}%>
	</div>
 </div>
 <script type="text/javascript">
    function popup(){
        var url ="/accounts/login";
        var name = "popup";
        window.open(url,name,"width=300,height=280,toolbar=no,status=no,location=no,scrollbars=yes,menubar=no,resizable=yes,left=50,right=50");
    }
</script>
