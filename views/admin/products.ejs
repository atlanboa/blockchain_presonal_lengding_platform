<% include ../includes/header.ejs %>
   <div style="padding: 2%;">
    <table class="table table-bordered table-hover">
        <tr>
            <th>등급</th>
            <th>제목</th>
            <th>대출 가능 금액</th>
            <th>이자율</th>
            <th>상환기간</th>
            <th>작성자</th>
            <th>삭제</th>
        </tr>
        <%products.forEach(function(product){%>
        <tr>
            <td>
                <a class="btn-info btn-sm"><%=product.credit%></a>
            </td>
            <td>
                <a href="/admin/products/detail/<%=product.id%>"><%=product.name%></a>
            </td>
            <td>
                <%=product.price%>
            </td>
            <td>
                <%=product.interestrate%> %
            </td>
            <td>
                <%=product.getDate.year%> -
                <%=product.getDate.month%> -
                <%=product.getDate.day%>
            </td>
            <td>
                <%=product.username%>
            </td>
            <td>
                <a href="/admin/products/delete/<%=product.id%>" class="btn btn-danger" onclick="return confirm('삭제하시겠습니까?')">삭제</a>
            </td>
        </tr>
        <% }); %>
    </table>
 
    <a href="/admin/products/write" class="btn btn-default">작성하기</a>
 </div>
<% include ../includes/footer.ejs %>